{
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": false,
  "major": {
    "enabled": false
  },
  "automergeSchedule": [
    "every weekend"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint",
      "automerge": true
    }
  ]
}
